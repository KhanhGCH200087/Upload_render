
        <div class="container-lg">
            <div class="row">
                <div class="col-md-10 mx-auto">
                    <div class="contact-form">
                        <h1>Enter Role Detail</h1>
                        {{#if InputErrors}}
                            <div>
                                <p>Please correct the following errors:</p>
                                <ul>
                                    {{#each InputErrors}}
                                        <li>{{this}}</li>
                                    {{/each}}
                                </ul>
                            </div>
                        {{/if}}
                        {{#if message}}
                           <p>{{message}}</p>
                        {{/if}}
                        <form action="" method="post" enctype="multipart/form-data"> 
                            <div class="form-group">
                                <label for="inputSubject">Role</label>
                                <input type="text" class="form-control" name="role" value="{{ role.role }}">
                            </div>
                            <div class="form-group">
                                <label for="inputSubject">Description</label>
                                <input type="text" class="form-control" name="description" value="{{ role.description }}" required>
                            </div>
            
                            <button type="submit" value="Edit" class="btn btn-primary"><i class="fa fa-paper-plane"></i> Add</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
