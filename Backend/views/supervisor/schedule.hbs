
        <div class="container-xl">
            <div class="table-responsive">
                <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2><b>Schedule data</b></h2>
                            {{#if message}}
                                <h4><b>{{message}}</b></h4>
                            {{/if}}
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>&nbsp;</th>
                            <td>&nbsp;</td>
                            <th>Name</th>
                            <th>Date</th>
                            <td>&nbsp;</td>
                        </tr>
                    </thead>
                    <tbody>
                            <tr>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>{{scheduleData.name}}</td>
                                <td><span class="birth-date">{{scheduleData.date}}</span></td>     
                                <td>&nbsp;</td> 
                            </tr>
                    </tbody>
                </table>
                </div>
                <div class="table-wrapper">
                    <div class="table-title">
                        <div class="row">
                            <div class="col-sm-6">
                                <h2><b>Class Detail</b></h2>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>&nbsp;&nbsp;</th>
                                <th>Class</th>
                                <th>&nbsp;</th>
                                <th>Teacher</th>
                                <th>Contact</th>
                                <th>Email</th>
                                <th>Picture</th>
                            </tr>
                        </thead>
                        <tbody>		
                                <tr>
                                    <td></td>
                                    <td><h4>{{ classData.name }}</h4></td>
                                    <td>&nbsp;</td>
                                    <td><h4>{{ teacherData.name }}</h4></td>
                                    <td><h4>{{ teacherData.contact }}</h4></td>
                                    <td><h4>{{teacherData.account.email}}</h4></td>
                                    <td><img src="data:image/jpeg;base64,{{teacherData.picture}}" style="max-width: 150px;"></td>
                                </tr> 
                        </tbody>
                    </table>
                </div>
                <div class="table-wrapper">
                    <div class="table-title">
                        <div class="row">
                            <div class="col-sm-6">
                                <h2><b>List of Journey</b></h2>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>&nbsp;</th>
                                <th>Name</th>
                                <th>Bus</th>
                                <th>Bus's Image</th>
                                <th>Driver</th>
                                <th>Driver's contact</th>
                                <th>Driver's image</th>
                            </tr>
                        </thead>
                        <tbody>		
                            {{#each journeyList}}
                                <tr>
                                    <td></td>
                                    <td><h4>{{ name }}</h4></td>
                                    <td><h4>{{bus.plate}}</h4></td>
                                    <td><img src="data:image/jpeg;base64,{{bus.picture}}" style="max-width: 150px;"></td>
                                    <td><h4>{{driver.name}}</h4></td>
                                    <td><h4>{{driver.contact}}</h4></td>
                                    <td><img src="data:image/jpeg;base64,{{driver.picture}}" style="max-width: 150px;"></td>
                                </tr> 
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>        
        </div>
    <script>
        // Function to format date
        function formatDate(dateString) {
            var birthDate = new Date(dateString);
            return birthDate.toLocaleDateString("en-US", {
                weekday: 'short',
                year: 'numeric',
                month: 'short',
                day: 'numeric'
            });
        }

        // Loop through all elements with class "birth-date" and format the date
        document.querySelectorAll('.birth-date').forEach(function(element) {
            var formattedDate = formatDate(element.innerText);
            element.innerText = formattedDate;
        });
    </script>
