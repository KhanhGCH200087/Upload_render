
        <div class="container-lg">
            <div class="row">
                <div class="col-md-10 mx-auto">
                    <div class="contact-form">
                        <h1>Enter Bus Data</h1>
                        {{#if InputErrors}}
                            <div>
                                <p>Please correct the following errors:</p>
                                <ul>
                                    {{#each InputErrors}}
                                        <li>{{this}}</li>
                                    {{/each}}
                                </ul>
                            </div>
                        {{/if}}

                        <form action="" method="post" enctype="multipart/form-data"> 
                            <div class="form-group">
                                <label for="inputSubject">Name</label>
                                <input type="text" class="form-control" name="name" value="{{supervisor.name}}" required>
                            </div>
                            <div class="form-group">
                                <label for="inputSubject">Contact</label>
                                <input type="number" class="form-control" name="contact" value="{{supervisor.contact}}" required>
                            </div>
                            <div class="form-group">
                                <label for="inputSubject">Address</label>
                                <input type="text" class="form-control" name="address" value="{{supervisor.address}}"required>
                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="inputName">File</label>
                                        <input class="form-control" type="file" name="picture" accept="image/*">
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <img src="data:image/jpeg;base64,{{supervisor.picture}}" style="max-width: 150px;">
                                    </div>
                                </div>           
                            </div> 
                            <div class="row">
                                 <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="inputName">Latitude</label>
                                        <input class="form-control" type="text" name="latitude" value="{{supervisor.latitude}}" >
                                    </div>
                                </div>   
                                 <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="inputName">Longitude</label>
                                        <input class="form-control" type="text" name="longitude" value="{{supervisor.longitude}}">
                                    </div>
                                </div>      
                            </div>

                            <div class="form-group">
                                <label for="inputSubject">Email</label>
                                <input type="email" class="form-control" name="email" value="{{account.email}}" required>
                            </div>
                            <div class="form-group">
                                <label for="inputSubject">Password</label>
                                <input type="text" class="form-control" name="password" >
                            </div>     
                            
                            <button type="submit" value="Add" class="btn btn-primary"><i class="fa fa-paper-plane"></i> Add</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
