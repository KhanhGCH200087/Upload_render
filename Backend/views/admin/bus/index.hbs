
        <div class="container-xl">
            <div class="table-responsive">
                <div class="table-wrapper">
                    <div class="table-title">
                        <div class="row">
                            <div class="col-sm-6">
                                <h2><b>List of Bus</b></h2>
                                {{#if message}}
                                    <h4><b>{{message}}</b></h4>
                                {{/if}}
                            </div>
                            <div class="col-sm-6">
                                <a href="/bus/add" class="btn btn-success" ><i class="material-icons">&#xE147;</i> <span>Add New Bus</span></a>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>&nbsp;&nbsp;&nbsp;&nbsp;</th>
                                <th>Plate</th>
                                <th>&nbsp;</th>
                                <th>Seats</th>
                                <th>Picture</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>		
                            {{#each busList}}
                                <tr>
                                    <td></td>
                                    <td>{{ plate }}</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;{{ seats }}</td>
                                    <td><img src="data:image/jpeg;base64,{{picture}}" style="max-width: 150px;"></td>
                                    <td>
                                        <a href="/bus/edit/{{_id}}" class="edit" ><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
                                        <a href="/bus/delete/{{_id}}" class="delete" ><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                                    </td>
                                </tr> 
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>        
        </div>