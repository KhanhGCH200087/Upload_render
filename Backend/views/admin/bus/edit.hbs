
        <div class="container-lg">
            <div class="row">
                <div class="col-md-10 mx-auto">
                    <div class="contact-form">
                        <h1>Enter Bus Detail</h1>
                        {{#if InputErrors}}
                            <div>
                                <p>Please correct the following errors:</p>
                                <ul>
                                    {{#each InputErrors}}
                                        <li>{{this}}</li>
                                    {{/each}}
                                </ul>
                            </div>
                        {{/if}}
                        {{#if message}}
                           <p>{{message}}</p>
                        {{/if}}
                        <form action="" method="post" enctype="multipart/form-data"> 
                            <div class="form-group">
                                <label for="inputSubject">Plate</label>
                                <input type="text" class="form-control" name="plate" value="{{ bus.plate }}" required>
                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="inputName">Seats</label>
                                        <input type="number" class="form-control" name="seats" value="{{ bus.seats }}"required>
                                    </div>
                                </div>    
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="inputName">File</label>
                                        <input class="form-control" type="file" name="picture" accept="image/*" value="{{ bus.picture }}">
                                    </div>
                                </div>             
                            </div>      
                              <div class="form-group">
                                <img src="data:image/jpeg;base64,{{ bus.picture }}" style="max-width: 300px;">
                            </div>
                            <button type="submit" value="Edit" class="btn btn-primary"><i class="fa fa-paper-plane"></i> Add</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
